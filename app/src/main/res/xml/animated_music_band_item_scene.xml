<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/thumbnail"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/one_grid_unit"
            android:layout_marginTop="@dimen/one_grid_unit"
            android:layout_marginEnd="@dimen/one_grid_unit"
            android:scaleX="1"
            android:scaleY="1"
            app:layout_constraintDimensionRatio="16:9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/back_arrow"
            android:layout_width="@dimen/four_grid_unit"
            android:layout_height="@dimen/four_grid_unit"
            android:layout_marginStart="@dimen/back_arrow_margin_start"
            android:layout_marginTop="@dimen/two_grid_unit"
            android:alpha="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/discography"
            android:layout_width="@dimen/six_grid_unit"
            android:layout_height="@dimen/six_grid_unit"
            android:layout_marginEnd="@dimen/two_grid_unit"
            android:alpha="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:alpha="0"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/discography" />

        <Constraint
            android:id="@+id/tags"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:alpha="0"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name" />

        <Constraint
            android:id="@+id/description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/four_grid_unit"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/middle">

        <Constraint
            android:id="@+id/thumbnail"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:scaleX="1.2"
            android:scaleY="1.2"
            app:layout_constraintDimensionRatio="16:9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/about_container"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/back_arrow"
            android:layout_width="@dimen/four_grid_unit"
            android:layout_height="@dimen/four_grid_unit"
            android:layout_marginStart="@dimen/one_and_half_grid_unit"
            android:layout_marginTop="@dimen/two_grid_unit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/discography"
            android:layout_width="@dimen/six_grid_unit"
            android:layout_height="@dimen/six_grid_unit"
            android:layout_marginEnd="@dimen/two_grid_unit"
            android:scaleX="1"
            android:scaleY="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <Motion app:transitionEasing="accelerate" />
        </Constraint>

        <Constraint
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/discography" />

        <Constraint
            android:id="@+id/tags"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name" />

        <Constraint
            android:id="@+id/description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/four_grid_unit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tags" />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

        <Constraint android:id="@+id/thumbnail">
            <PropertySet android:alpha="0" />
        </Constraint>

        <!--        <Constraint-->
        <!--            android:id="@+id/about_container"-->
        <!--            android:layout_width="0dp"-->
        <!--            android:layout_height="0dp"-->
        <!--            android:alpha="1"-->
        <!--            app:layout_constraintBottom_toBottomOf="parent"-->
        <!--            app:layout_constraintEnd_toEndOf="parent"-->
        <!--            app:layout_constraintStart_toStartOf="parent"-->
        <!--            app:layout_constraintTop_toTopOf="parent" />-->

        <Constraint
            android:id="@+id/discography"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </ConstraintSet>

    <Transition
        android:id="@+id/start_to_middle"
        app:constraintSetEnd="@id/middle"
        app:constraintSetStart="@id/start"
        app:duration="300">

        <OnClick
            app:clickAction="toggle"
            app:targetId="@+id/back_arrow" />

        <KeyFrameSet>
            <KeyAttribute
                android:scaleX="1.2"
                android:scaleY="1.2"
                app:framePosition="80"
                app:motionTarget="@+id/thumbnail" />

            <KeyAttribute
                android:alpha="1"
                app:framePosition="80"
                app:motionTarget="@+id/back_arrow" />

            <KeyAttribute
                android:alpha="1"
                android:scaleX="1.2"
                android:scaleY="1.2"
                app:framePosition="80"
                app:motionTarget="@+id/discography" />

            <KeyAttribute
                android:alpha="1"
                app:framePosition="80"
                app:motionTarget="@+id/name" />

            <KeyAttribute
                android:alpha="1"
                app:framePosition="80"
                app:motionTarget="@+id/tags" />

            <KeyAttribute
                android:alpha="1"
                app:framePosition="90"
                app:motionTarget="@+id/description" />

        </KeyFrameSet>

    </Transition>

    <Transition
        android:id="@+id/middle_to_end"
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@id/middle"
        app:duration="500">

        <OnClick
            app:clickAction="toggle"
            app:targetId="@+id/discography" />

    </Transition>

</MotionScene>